#include <iostream>
using namespace std;

int playTurn(int secretNumber, int currentPlayer) {
    int guess;
    cout << "Player " << currentPlayer << ", enter your guess (1-100): ";
    cin >> guess;

    if (guess == secretNumber) {
        cout << "Player " << currentPlayer << " wins! The number was " << secretNumber << endl;
        return 1;
    }
    else if (guess < secretNumber) {
        cout << "Too low! Passing turn..." << endl;
    }
    else {
        cout << "Too high! Passing turn..." << endl;
    }

    return playTurn(secretNumber, (currentPlayer % 2) + 1);
}

int main() {
    int secretNumber;
    secretNumber = (time(0) % 100) + 1; 

    cout << "=== Number Guessing Game ===" << endl;
    cout << "A number between 1 and 100 has been chosen." << endl;
    cout << "Players take turns to guess it." << endl;

    playTurn(secretNumber, 1);
    return 0;
}
