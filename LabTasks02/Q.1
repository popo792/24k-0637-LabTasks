#include <iostream>
using namespace std;

class DynamicArray {
    int* arr;        
    int size;  
    int capacity; 

    void resize() {
        capacity *= 2; 
        int* newArr = new int[capacity];

        for (int i = 0; i < size; i++) {
            newArr[i] = arr[i];
        }

        delete[] arr;

        arr = newArr;
    }

public:
    DynamicArray(int initialCapacity = 2) {
        capacity = initialCapacity;
        size = 0;
        arr = new int[capacity];
    }

    void push_back(int value) {
        if (size == capacity) {
            resize(); 
        }
        arr[size] = value;
        size++;
    }

    void print() const {
        cout << "Array elements: ";
        for (int i = 0; i < size; i++) {
            cout << arr[i] << " ";
        }
        cout << endl;
    }

    ~DynamicArray() {
        delete[] arr;
    }
};

int main() {
    DynamicArray d1;

    d1.push_back(6);
    d1.push_back(18);
    d1.push_back(5); 
    d1.push_back(39);

    d1.print();

    return 0;
}
